<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerLinks}}
</head>

<body>

    <!-- navbar code -->
    {{>navbar}}

    <!-- main code -->

    <div class="contaner-fluid">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form" action="">
                        <input type="text" id="cityName" placeholder="Enter City" autocomplete="off">
                        <input type="submit" value="Search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInfo">
                    <div class="top_layer">
                        <p id="day">Thursday</p>
                        <p id="today_date">11 MAY</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get city name here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span>0</span> &deg;C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- footer code -->

        {{>footer}}
        <script src="js/main.js"></script>
        <script>
            const day = document.getElementById('day');
            const todayDate = document.getElementById('today_date');

            const getCurrentDay = () => {
                var weekday = new Array(7);
                weekday[0] = "Sunday";
                weekday[1] = "Monday";
                weekday[2] = "Tuesday";
                weekday[3] = "Wednesday";
                weekday[4] = "Thursday";
                weekday[5] = "Friday";
                weekday[6] = "Saturday";

            let currentTime = new Date();
            let day = weekday[currentTime.getDay()];
            return day;
            };

            day.innerHTML = getCurrentDay();

            const getCurrentTime = () => {
                var months = [
                "Jan",
                "Feb",
                "Mar",
                "Apr",
                "May",
                "June",
                "July",
                "Aug",
                "Sept",
                "Oct",
                "Nov",
                "Dec",
                ];

                var now = new Date();
                var month = months[now.getMonth()];
                var date = now.getDate();

                let hours = now.getHours();
                let mins = now.getMinutes();

                let periods = "AM";

                if (hours > 11) {
                periods = "PM";
                if (hours > 12) hours -= 12;
                }
                if (mins < 10) {
                mins = "0" + mins;
                }

                return `${month} ${date} | ${hours}:${mins}${periods}`;
            };

            todayDate.innerHTML = getCurrentTime();

        </script>
</body>

</html>